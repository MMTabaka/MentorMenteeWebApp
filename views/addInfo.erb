<!doctype html>
<html lang="en">
<head>
  <meta charset="utf-8"/>
  <meta name="viewport" content="width=device-width, initial-scale=1"/>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-BmbxuPwQa2lc/FVzBcNJ7UAyJxM6wuqIj61tLrc4wSX0szH/Ev+nYRRuWlolflfl" crossorigin="anonymous">
  <link rel="stylesheet" href="css/style.css">
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.4.0/font/bootstrap-icons.css">
  <title>Registration Additional Information</title>
</head>

<body>
<%= erb :"common/nav" %>
<div class="containerSmall">
  <div class="contentSmall">
    <h1 class="text-center  pb-3">Welcome!</h1>
    <p class="text-center  pb-3">Provide additional information</p>
    <form method="post">
      <div class="mb-3">
        <img src="img/defaultPic.jpg" class="picSignup mx-auto d-block" alt="user picture">
        <br/>
        <label for="pic" class="form-label">Your Picture</label>
        <% if @userType == "1" %>
          <input id="pic" type="file" accept="image/gif,image/jpeg,image/jpg,image/png" class="form-control" name="pic" required>
        <% else %>
          <input id="pic" class="form-control" type="file" accept="image/gif,image/jpeg,image/jpg,image/png" name="pic">
        <% end %>
      </div>
      <div class="mb-3">
        <label for="username" class="form-label">Your Name</label>
        <input id="username" type="text" class="form-control" name="name" required>
      </div>
      <div class="mb-3">
        <% if @userType == "1" %>
          <label for="department" class="form-label">Department</label>
          <input id="department" type="text" class="form-control" name="department" required>
        <% else %>
          <label for="department" class="form-label">Department (optional)</label>
          <input id="department" type="text" class="form-control" name="department">
        <% end %>
      </div>
      <div class="mb-3">
        <% if @userType == "1" %>
          <label for="areas" class="form-label">Areas of Interest</label>
          <input id="areas" type="text" class="form-control" name="areas" required>
        <% else %>
          <label for="areas" class="form-label">Areas of Interest (optional)</label>
          <input id="areas" type="text" class="form-control" name="areas">
        <% end %>
      </div>
      <div class="mb-3">
        <% if @userType == "1" %>
          <label for="bio" class="form-label">Bio</label>
          <textarea id="bio" name="bio" required class="form-control" rows="4"></textarea>
        <% else %>
          <label for="bio" class="form-label">Bio (optional)</label>
          <textarea id="bio" name="bio" class="form-control" rows="4"></textarea>
        <% end %>
      </div>
      <button type="submit" class="btn btn-primary btnC">Create an account</button>
    </form>
  </div>
</div>
<%= erb :"common/footer" %>
</body>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta2/dist/js/bootstrap.bundle.min.js" integrity="sha384-b5kHyXgcpbZJO/tY9Ul7kGkf1S0CWuKcCD38l8YkeH8z8QjE0GmW1gYU5S9FOnJ0" crossorigin="anonymous"/>
</html>

<body>
<% activedLI = "" %>
<% activedM = "" %>
<% activedRH = "" %>
<% case @actived
  when "myMentee", "myMentor", "mentorList", "mentorDetail" %>
    <% activedM="active" %>
  <% when "requestHistory" %>
    <% activedRH="active" %>
  <% when "login" %>
    <% activedLI="active" %>
<% end %>
<div class="wrapper">
<div class="bg-warning">
  <div class="navi">
    <ul class="nav justify-content-end nav-pills">
      <% if !@logged_in %>
        <li class="nav-item">  
          <a class="nav-link text-body <%= activedLI %>" href="login">Log In</a>
        </li>
      <% else %>
        <li>
        <% if @userType == "Mentor" %>
          <a class="nav-link text-body <%= activedM %>" href="myMentee">My Mentee</a>
        <% elsif @userType == "Mentee" && @requesting == true %>
          <a class="nav-link text-body <%= activedM %>" href="myMentor">My Mentor</a>
        <% else %>
          <a class="nav-link text-body <%= activedM %>" href="/">Home</a>
        <% end %>
        </li>
        <li class="nav-item">
          <a class="nav-link text-body <%= activedRH %>" href="/request-history">Request History</a>
        </li>
        <li class="nav-item navPic">  
          <button class="nav-item" type="button" id="user" data-bs-toggle="dropdown" aria-expanded="false">
            <img src="/img/defaultPic.jpg" class="picSmall float-end" alt="user picture">
          </button>
          <ul class="dropdown-menu" aria-labelledby="user">
            <li><a class="dropdown-item" href="profile">Profile</a></li>
            <li><a class="dropdown-item" href="logout">Logout</a></li>
          </ul>
        </li>
      <% end %>
    </ul>
  </div>
</div>

<% userName = @email %>
<% if !@username.empty? %>
<% userName = @username%>
<% end %>

<!doctype html>
<html lang="en">
<head>
<meta charset="utf-8"/>
<meta name="viewport" content="width=device-width, initial-scale=1"/>
<!-- Bootstrap CSS -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-BmbxuPwQa2lc/FVzBcNJ7UAyJxM6wuqIj61tLrc4wSX0szH/Ev+nYRRuWlolflfl" crossorigin="anonymous">
<link rel="stylesheet" href="css/userInfo.css">
<link rel="stylesheet" href="css/style.css">
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.4.0/font/bootstrap-icons.css">
<title><%= userName %></title>
</head>

<!--------------------------------------------------------->

<body>
<%= erb :"common/nav" %>
<div class="container">
  <div class="content">
    <form method="post" class="row">
      <div class="col-sm"> <img src="<%= @pic %>" class="img-thumbnail float-start picProfile" alt="User Picture"> </div>
      <div class="col-9"> 
        <!-----username and email---->
        <div class="row">
          <div class="mb-3 row">
            <div class="col-sm-10">
              <label class="btn btnText" ><%= userName %> </label>
              <label class="btn btnText" ><%= @email %> </label>
            </div>
          </div>
        </div>
        
        <!-----Department---->
        <div class="row">
          <div class="mb-3 row">
            <div class="col-sm-10">
              <label class="col-sm-2 col-form-label">Department</label>
              <label class="btn btnText" ><%= @department %> </label>
            </div>
          </div>
        </div>
        
        <!-----Area of Interest---->
        <div class="row">
          <div class="mb-3 row">
            <div class="col-sm-10">
              <label class="col-sm-2 col-form-label">Area of Interest</label>
              <label class="btn btnText" ><%= @area %> </label>
            </div>
          </div>
        </div>
        <!-----Bio---->
        <div class="row">
          <div class="mb-3 row">
            <div class="col-sm-10">
              <label class="col-sm-2 col-form-label">Bio</label>
              <label class="btn btnText" ><%= @bio %> </label>
            </div>
          </div>
        </div>
        
        <!-----Request botton---->
        
        <div class="row">
          <div class="mb-3 row">
            <div class="col-sm-10">
              <button id="request" type="submit" class="btn btn-primary btn-lg btnC">Request
              </button>
            </div>
          </div>
        </div>
        <!---------------------------------------------> 
        
      </div>
    </form>
  </div>
</div>
<%= erb :"common/footer" %>
</body>
</html>

<%= erb :"common/header" %>
<title>Log In</title>
</head><%= erb :"common/nav" %>

<div class="containerSmall">
  <div class="contentSmall">
    <h1 class="text-center  pb-3">Welcome!</h1>
    <p class="text-center  pb-3">Reset password</p>
    <% unless @is_valid %>
    <p>Email is incorrect or does not exist</p>
    <% end %>
    <form method="post">
      <div class="mb-3">
        <label for="email" class="form-label">Email address</label>
        <input type="email" class="form-control" name="email" required>
      </div>
      <div>
        <button type="submit" class="btn btn-primary btnC">Submit</button>
      </div>
    </form>
  </div>
</div>
<%= erb :"common/footer" %>
</html>